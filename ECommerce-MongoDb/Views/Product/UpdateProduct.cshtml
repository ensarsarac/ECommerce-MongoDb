@model GetByIdProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-12">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>Ürün Güncelle</h2>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <div class="table-responsive-sm">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="@Model.ProductId" />
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Ürün Adı" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="@Model.Price" placeholder="Fiyat" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="@Model.Stock" placeholder="Stok" />
                    </div>
                    <div class="form-group">
                        <img src="@Model.ImageUrl" style="width:300px;height:300px; margin-bottom:20px;"/>
                        <input type="file" class="form-control" name="ImageFile" placeholder="Resim Link" />
                    </div>
                    <div class="form-group mb-3">
                        @Html.DropDownListFor(x => x.CategoryId, (SelectList)ViewBag.categories, "Kategori Seçiniz", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn cur-p btn-success"><i class="fa fa-check-circle"></i> Kaydet</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>