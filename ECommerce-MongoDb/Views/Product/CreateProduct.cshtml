@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>Yeni Ürün Oluştur</h2>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <div class="table-responsive-sm">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" class="form-control" name="Name" placeholder="Ürün Adı" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="Price" placeholder="Fiyat" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="Stock" placeholder="Stok" />
                    </div>
                    <div class="form-group">
                        <input type="file" class="form-control" name="ImageUrl" placeholder="Resim Link" />
                    </div>
                    <div class="form-group mb-3">
                        @Html.DropDownListFor(x=>x.CategoryId,(SelectList)ViewBag.categories,"Kategori Seçiniz",new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn cur-p btn-success"><i class="fa fa-check-circle"></i> Kaydet</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>