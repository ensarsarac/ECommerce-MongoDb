@model List<ResultProductDto>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-md-12">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>Ürünler Listesi</h2>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <div class="table-responsive-sm">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ürün</th>
                            <th>Fiyat</th>
                            <th>Stok</th>
                            <th>Kategori</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() <= 0)
                        {
                            <div class="alert alert-warning">Listelenecek herhangi bir ürün bulunamadı.</div>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ProductId</td>
                                    <td><img src="@item.ImageUrl" style="width:100px;height:100px;" class="img-thumbnail" /> <span>@item.Name</span></td>
                                    <td>@item.Price</td>
                                    <td>@item.Stock</td>
                                    <td>@item.CategoryName</td>
                                    <td style="width:80px;"><a href="/Product/DeleteProduct/@item.ProductId" class="btn cur-p btn-danger"><i class="fa fa-trash white_color"></i></a></td>
                                    <td style="width:80px;"><a href="/Product/UpdateProduct/@item.ProductId" class="btn cur-p btn-warning"><i class="fa fa-edit white_color"></i></a></td>
                                </tr>
                            }
                        }
                     

                    </tbody>
                </table>
                <a href="/Product/CreateProduct" class="btn cur-p btn-primary"><i class="fa fa-plus-circle blue_color"></i> Yeni Ürün Oluştur</a>
            </div>
        </div>
    </div>
</div>